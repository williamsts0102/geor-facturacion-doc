			</tr>
			<tr>
				<td>fiscal_address</td>
				<td>Dirección fiscal</td>
				<td>String</td>
				<td>Máximo 200 caracteres</td>
				<td>Si</td>
			</tr>
			<tr>
				<td>default</td>
